{
  "title": "Vim-style: swap j/k except in insert/command mode; toggle with F1",
  "rules": [
    {
      "description": "F1 toggle, insert on i/a/c, Esc to normal, colon starts command mode, Enter ends command mode; swap j/k in normal mode",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "f1", "modifiers": { "optional": ["any"] } },
          "to": [ { "set_variable": { "name": "jk_swap_enabled", "value": 1 } } ],
          "conditions": [ { "type": "variable_if", "name": "jk_swap_enabled", "value": 0 } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f1", "modifiers": { "optional": ["any"] } },
          "to": [ { "set_variable": { "name": "jk_swap_enabled", "value": 0 } } ],
          "conditions": [ { "type": "variable_if", "name": "jk_swap_enabled", "value": 1 } ]
        },

        {
          "type": "basic",
          "from": { "key_code": "i", "modifiers": { "optional": ["any"] } },
          "to": [
            { "set_variable": { "name": "insert_mode", "value": 1 } },
            { "key_code": "i" }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "a", "modifiers": { "optional": ["any"] } },
          "to": [
            { "set_variable": { "name": "insert_mode", "value": 1 } },
            { "key_code": "a" }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "c", "modifiers": { "optional": ["any"] } },
          "to": [
            { "set_variable": { "name": "insert_mode", "value": 1 } },
            { "key_code": "c" }
          ]
        },

        {
          "type": "basic",
          "from": { "key_code": "escape", "modifiers": { "optional": ["any"] } },
          "to": [
            { "set_variable": { "name": "insert_mode", "value": 0 } },
            { "set_variable": { "name": "command_mode", "value": 0 } },
            { "key_code": "escape" }
          ]
        },

        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "jk_swap_enabled", "value": 1 },
            { "type": "variable_if", "name": "insert_mode", "value": 0 }
          ],
          "from": {
            "key_code": "semicolon",
            "modifiers": { "mandatory": ["shift"], "optional": ["any"] }
          },
          "to": [
            { "set_variable": { "name": "command_mode", "value": 1 } },
            { "key_code": "semicolon", "modifiers": ["shift"] }
          ]
        },

        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "command_mode", "value": 1 }
          ],
          "from": { "key_code": "return_or_enter", "modifiers": { "optional": ["any"] } },
          "to": [
            { "set_variable": { "name": "command_mode", "value": 0 } },
            { "key_code": "return_or_enter" }
          ]
        },

        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "jk_swap_enabled", "value": 1 },
            { "type": "variable_if", "name": "insert_mode", "value": 0 },
            { "type": "variable_if", "name": "command_mode", "value": 0 }
          ],
          "from": { "key_code": "j", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "k" } ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_if", "name": "jk_swap_enabled", "value": 1 },
            { "type": "variable_if", "name": "insert_mode", "value": 0 },
            { "type": "variable_if", "name": "command_mode", "value": 0 }
          ],
          "from": { "key_code": "k", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "j" } ]
        }
      ]
    }
  ]
}
